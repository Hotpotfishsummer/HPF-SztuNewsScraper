{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "� CLI Mode",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "presentation": {
                "hidden": false,
                "order": 1
            }
        },
        {
            "name": "⚡ Service Mode",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/entry/service.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["--info"],
            "justMyCode": false,
            "presentation": {
                "hidden": false,
                "order": 2
            }
        },
        {
            "name": "▶️ Run Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "presentation": {
                "hidden": false,
                "order": 3
            }
        }
    ]
}

