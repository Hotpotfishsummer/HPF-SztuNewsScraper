# Web 应用容器
FROM python:3.11-slim

WORKDIR /app

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# 复制依赖和项目文件
COPY requirements.txt .
RUN pip install --upgrade pip && \
    pip install -r requirements.txt

COPY . .

# 创建必要的目录
RUN mkdir -p data/articles data/logs data/cache

# 暴露 Streamlit 端口
EXPOSE 8501

# 启动 Web 服务
CMD ["python", "services/web_service.py", "--host", "0.0.0.0", "--port", "8501"]
